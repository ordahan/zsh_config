if [[ $(uname) == "Linux" ]]; then
    if isexe xclip; then
        alias -g cpcopy="xclip -i"
        alias -g cppaste="xclip -o"
        _GOT_CLIPBOARD=1
    fi
    if (ls --version | grep 'GNU coreutils') >/dev/null 2>&1; then
        alias ls='ls --color=auto'
    fi

    function ui-notify() {
      notify-send "$1"
    }
fi
